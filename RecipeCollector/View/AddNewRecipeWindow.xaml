<Window x:Class="RecipeCollector.View.AddNewRecipeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AddNewRecipeWindow" Height="300" Width="300"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock Text="{Binding}"/>
            <Button Content="Add Recipe" PreviewMouseLeftButtonUp="Button_PreviewMouseLeftButtonUp"/>
        </StackPanel>
    </Grid>
</Window>
